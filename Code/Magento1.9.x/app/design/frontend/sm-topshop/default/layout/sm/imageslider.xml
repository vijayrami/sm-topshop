<?xml version="1.0"?>
<layout version="1.0">
	<default>
		<reference name="head">
			<action method="addItem">
				<type>skin_js</type>
				<name helper="imageslider/data/getInlucdeJQquery"></name>
			</action>

			<action method="addItem">
				<type>skin_js</type>
				<name helper="imageslider/data/getInlucdeNoconflict"></name>
			</action>

			<action method="addItem">
				<type>skin_js</type>
				<name helper="imageslider/data/addJsOwlCarousel"></name>
			</action>

			<action method="addItem" ifconfig="imageslider_cfg/general/active">
				<type>skin_css</type>
				<name>sm/imageslider/css/imageslider.css</name>
			</action>
		</reference>
	</default>
	<imageslider_index_index>
		<reference name="content">
			<block type="imageslider/list" name="imageslider.list.default" template="sm/imageslider/default.phtml">
			</block>
		</reference>
	</imageslider_index_index>
</layout>   
	
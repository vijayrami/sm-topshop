								if($filter_type == 'categories') {
									$link_viewall = Mage::getModel("catalog/category")->load($items->id)->getUrl();
								} else {
									switch ($items->id) {
										case "created_at":
											$link_viewall = $url_viewall_created_at;
											break;
										case "price":
											$link_viewall = $url_viewall_price;
											break;
										case "lastest_product":
											$link_viewall = $url_viewall_lastest_product;
											break;
										case "top_rating":
											$link_viewall = $url_viewall_top_rating;
											break;
										case "most_reviewed":
											$link_viewall = $url_viewall_most_reviewed;
											break;
										case "most_viewed":
											$link_viewall = $url_viewall_most_viewed;
											echo $link_viewall;
											break;
										case "best_sales":
											$link_viewall = $url_viewall_most_best_sales;
											break;

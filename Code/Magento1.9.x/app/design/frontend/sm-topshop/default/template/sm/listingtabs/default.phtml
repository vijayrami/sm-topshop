	$module_id = $this->_moduleID();
	$tag_id = 'sm_listing_tabs_' . rand() . time();
	$class_ltabs = 'ltabs00-' . $this->_getConfig('nbi_column1', 4) . ' ltabs01-' . $this->_getConfig('nbi_column1', 3) . ' ltabs02-' .

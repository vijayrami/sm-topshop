	$show_loadmore_slider = $this->_getConfig('show_loadmore_slider');
	$class_show = ($show_loadmore_slider == 'loadmore') ? ' show-loadmore' : ' show-slider';
	if($show_loadmore_slider == 'none'){
		$class_show = 'show-loadmore no-control';
	}
	// view all
	$filter_type = $this->_getConfig('filter_type', 'categories');
	if($show_loadmore_slider == 'viewall'){
		$class_show = 'show-loadmore no-control show-viewall';
	}
	// list url view all
	$url_viewall_created_at = $this->_getConfig('url_viewall_created_at');
	$url_viewall_price = $this->_getConfig('url_viewall_price', '#');
	$url_viewall_lastest_product = $this->_getConfig('url_viewall_lastest_product', '#');

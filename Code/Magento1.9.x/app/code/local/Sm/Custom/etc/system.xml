<?xml version="1.0"?>
<config>
	<tabs>
		<sm>
			<label>Magentech.com</label>
			<sort_order>205</sort_order>
		</sm>
	</tabs>
	<sections>
		<custom_cfg translate="label" module="custom">
			<label>SM Custom</label>
			<tab>sm</tab>
			<frontend_type>text</frontend_type>
			<sort_order>150</sort_order>
			<show_in_default>1</show_in_default>
			<show_in_website>1</show_in_website>
			<show_in_store>1</show_in_store>
			<groups>
				<!-- start general group -->
				<general translate="label">
					<label>General settings</label>
					<frontend_type>text</frontend_type>
					<sort_order>1</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<fields>
						<active translate="label">
							<label>Enable/Disable</label>
							<sort_order>1</sort_order>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_enabledisable</source_model>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</active>
						<custom_title_text translate="label">
							<label>Title of Module</label>
							<frontend_type>text</frontend_type>
							<sort_order>2</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</custom_title_text>
						<product_links_target translate="label">
							<label>Link Target</label>
							<frontend_type>select</frontend_type>
							<source_model>custom/system_config_source_LinkTargets</source_model>
							<sort_order>3</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</product_links_target>
					</fields>
				</general>
				<!-- end general group -->

				<!-- Begin Source Options Settings Group -->
				<source_options translate="label">
					<label>Source Options</label>
					<frontend_type>text</frontend_type>
					<sort_order>2</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<fields>
						<header_item translate="label">
							<label>Header Items</label>
							<frontend_type>text</frontend_type>
							<validate>validate-number</validate>
							<sort_order>5</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<comment>Add Slide</comment>
						</header_item>
						
						<product_additem translate="label">
                            <label>Group Slide</label>
                            <backend_model>adminhtml/system_config_backend_serialized_array</backend_model>
                            <frontend_model>custom/adminhtml_system_config_form_field_Additem</frontend_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Add Slide</comment>
                        </product_additem>					
					</fields>
				</source_options>
				<!-- End Source Options Group -->
				
				<!-- Begin Advanced Options Group -->
				<advanced translate="label">
					<label>Advanced Options</label>
					<frontend_type>text</frontend_type>
					<sort_order>6</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<fields>
						<pretext translate="label">
							<label>Pre-text</label>
							<frontend_type>textarea</frontend_type>
							<sort_order>2</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</pretext>
						<posttext translate="label">
							<label>Post-text</label>
							<frontend_type>textarea</frontend_type>
							<sort_order>3</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</posttext>
					</fields>
				</advanced>
				<!-- End Advanced Options Group -->

				<!-- Begin Product Information Options Group -->
				<product_information translate="label">
					<label>Product Information</label>
					<frontend_type>text</frontend_type>
					<sort_order>7</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<fields>
						<author translate="label">
							<label><![CDATA[<p>Author: <a target="_blank" title="Magen Tech" href="http://www.magentech.com">Magen Tech</a></p>
											<p>Vesion: 1.0.0</p>
											<p>Userguide: <a target="_blank" title="Usergide" href="http://www.magentech.com/extensions/extension-user-guides">Userguide</a></p>
											<p>Support: <a target="_blank" href="http://www.magentech.com/forum">http://www.magentech.com/forum</a></p>
								]]>
							</label>
							<frontend_model>adminhtml/system_config_form_field_heading</frontend_model>
							<sort_order>1</sort_order>
							<show_in_default>1</show_in_default>
						</author>
					</fields>
				</product_information>
				<!-- End Product Information Options Group -->

			</groups>
		</custom_cfg>
	</sections>
</config>
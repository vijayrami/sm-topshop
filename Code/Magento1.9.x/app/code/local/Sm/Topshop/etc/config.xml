<?xml version="1.0"?>
<config>
	<modules>
		<Sm_Topshop>
			<version>1.0.0</version>
			<title>MagenTech.com</title>
			<link><![CDATA[http://www.magentech.com/]]></link>
		</Sm_Topshop>
	</modules>
	<global>
		<models>
			<topshop>
				<class>Sm_Topshop_Model</class>
			</topshop>
		</models>	
		<blocks>
            <topshop>
                <class>Sm_Topshop_Block</class>
            </topshop>
			<page>
                <rewrite>
                    <html_head>Sm_Topshop_Block_Page_Html_Head</html_head>
                </rewrite>
            </page>	
        </blocks>				
		<helpers>
            <topshop>
                <class>Sm_Topshop_Helper</class>
            </topshop>
			<core>
                <rewrite>
                    <data>Sm_Topshop_Helper_Core_Data</data>
                </rewrite>
            </core>	
        </helpers>
        <resources>
        	<topshop_setup>
        		<setup>
        			<module>Sm_Topshop</module>
        		</setup>
				<connection>
					<use>core_setup</use>
				</connection>
        	</topshop_setup>
        </resources>
		<events>
			<controller_action_layout_render_before>
				 <observers>
                    <topshop>
                        <type>singleton</type>
                        <class>topshop/observer</class>
                        <method>less_compile</method>
                    </topshop>
                </observers>
			</controller_action_layout_render_before>
		</events>	
	</global>

	<frontend>
		<routers>
			<topshop>
				<use>standard</use>
				<args>
					<module>Sm_Topshop</module>
					<frontName>topshop</frontName>
				</args>
			</topshop>
		</routers>
		<layout>
			<updates>
				<topshop>
					<file>sm/topshop.xml</file>
				</topshop>
			</updates>
		</layout>
		<translate>
			<modules>
				<Sm_Topshop>
					<files>
						<default>Sm_Topshop.csv</default>
					</files>
				</Sm_Topshop>
			</modules>
		</translate>
	</frontend>
	
	<admin>        
		<routers>			
			<topshop>
				<use>admin</use>				
				<args>					
					<module>Sm_Topshop</module>
					<frontName>topshop</frontName>
				</args>			
			</topshop>
		</routers>    
	</admin>	
	
	<adminhtml>
        <translate>
      		<modules>
          		<Sm_Topshop>
                     <files>
                          <default>Sm_Topshop.csv</default>
                     </files>
                </Sm_Topshop>
            </modules>
        </translate>
        <layout>
            <updates>
                <topshop module="Sm_Topshop">
                    <file>sm/topshop.xml</file>
                </topshop>
            </updates>
        </layout>
    </adminhtml>
	
 	<default>
		<topshop_cfg module="topshop">
			<general>
			<!-- Layout -->			
				<layout_styles>1</layout_styles>
				<header_style>df</header_style>
				<color>blue</color>
			<!-- Entire Page -->
				<body_font_family>Georgia</body_font_family>
				<body_font_size>12px</body_font_size>
				<google_font>Anton</google_font>
				<google_font_targets></google_font_targets>
				<direction>1</direction>
				<body_link_color>#444444</body_link_color>
				<body_link_hover_color>#478BCA</body_link_hover_color>
				<body_text_color>#686868</body_text_color>
				<body_background_color>#E5E5E5</body_background_color>
				<use_background_image>0</use_background_image>
				<body_background_image></body_background_image>
				<use_customize_image></use_customize_image>
				<background_customize_image></background_customize_image>
				<background_repeat></background_repeat>
				<background_position></background_position>
			<!-- Menu -->	
				<menu_styles>1</menu_styles>
				<menu_ontop>0</menu_ontop>
				<responsive_menu>3</responsive_menu>
			</general>
			<detail_topshop>
				<show_imagezoom>1</show_imagezoom>
				<zoom_mode>1</zoom_mode>
				<show_related>1</show_related>
				<related_number>12</related_number>
				<show_upsell>1</show_upsell>
				<upsell_number>12</upsell_number>
				<show_customtab>1</show_customtab>
				<customtab_name>Custom Tab</customtab_name>
				<customtab_content>Custom Tab Content</customtab_content>
			</detail_topshop>
			<rich_snippets_setting>
				<use_rich_snippet>1</use_rich_snippet>
				<set_breadcrumbs>1</set_breadcrumbs>
				<google_plus_href>https://plus.google.com/u/0/+Smartaddons</google_plus_href>
			</rich_snippets_setting>
			<social_topshop>
				<show_facebook>1</show_facebook>
				<facebook_name>Facebook</facebook_name>
				<facebook_url>https://www.facebook.com/MagenTech</facebook_url>
				<show_twitter>1</show_twitter>
				<twitter_name>Twitter</twitter_name>
				<twitter_url>https://twitter.com/smartaddons</twitter_url>
				<show_google>1</show_google>
				<google_name>Google+</google_name>
				<google_url>https://plus.google.com/u/0/+Smartaddons/posts</google_url>				
				<show_linkedin>1</show_linkedin>
				<linkedin_name>Linkedin</linkedin_name>
				<linkedin_url>#</linkedin_url>
				<flickr_name>Flickr</flickr_name>
				<flickr_url>#</flickr_url>				
				<show_pinterest>1</show_pinterest>
				<pinterest_name>Pinterest</pinterest_name>
				<pinterest_url>#</pinterest_url>
			</social_topshop>
			<advanced>
				<show_cpanel>1</show_cpanel>
				<show_ontop>1</show_ontop>
				<!--use_ajaxcart>1</use_ajaxcart-->
				<show_addtocart>1</show_addtocart>
				<show_wishlist>1</show_wishlist>
				<show_compare>1</show_compare>
				<!--show_quickview>1</show_quickview-->
				<custom_copyright>0</custom_copyright>
				<copyright></copyright>
				<custom_css></custom_css>
				<custom_js></custom_js>
				<!--Minify css, js-->
				<compress_css_js></compress_css_js>
				<enable_yuicompressor></enable_yuicompressor>
			</advanced>
		</topshop_cfg>
	</default> 
</config> 